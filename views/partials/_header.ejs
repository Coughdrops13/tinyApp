<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
      <% if(user) {%>
        <div class="nav-item">
          <form method="POST" action="/logout">
            <label style="color: white">Logged in as: <%= user.email %>!</label>
            <button type="submit" style="border: 1px solid white; background-color: #28a745; color: white; border-radius: 4px">Logout</button>
          </form>
        </div>
      <% } else{ %>
        <div class="nav-item">
          <form method="POST" action="/login">
            <input name="username" placeholder="Username" style="border: 1px solid white; border-radius: 4px"/>
            <button type="submit" style="border: 1px solid white; background-color: #28a745; color: white; border-radius: 4px">Submit</button>
          </form>
        </div>
      <% } %>
    </div>
  </nav>
</header>